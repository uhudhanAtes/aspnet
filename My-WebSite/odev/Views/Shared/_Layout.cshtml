<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>TecnoSozluk.com</title>
    <link rel="stylesheet" href="/ödev2/stillerim.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body style="background-color: rgb(174, 154, 147);">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark" style="margin-top:-50px; font-weight:bold; font-size:small">
        <div class="container-fluid">
            <label for="TecnoSozluk.com" class="navbar-brand">TecnoSozluk</label>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mynavbar">
                <ul class="nav navbar-nav me-auto">
                    <li class="nav-item">@Html.ActionLink(odev.Kaynaklar.lang.anasafya, "Index", "Home")</li>
                    <li class="nav-item">@Html.ActionLink(odev.Kaynaklar.lang.cevaplanmayan, "About", "Home")</li>
                    <li class="nav-item">@Html.ActionLink(odev.Kaynaklar.lang.yeni, "Contact", "Home")</li>
                    <li class="nav-item">@Html.ActionLink(odev.Kaynaklar.lang.konu, "Create", "Tables")</li>
                    <li class="nav-item">@Html.ActionLink(odev.Kaynaklar.lang.yonet, "Index", "Tables")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_LoginPartial")
                    <li class="nav-item">@Html.ActionLink("Türkçe", "dilDegistir", "Home", new { lang = "tr", returnurl = this.Request.RawUrl }, null)</li>
                    <li class="nav-item">@Html.ActionLink("English", "dilDegistir", "Home", new { lang = "en", returnurl = this.Request.RawUrl }, null)</li>
                </ul>

            </div>
        </div>
    </nav>
    @RenderBody()
    <div class="container body-content">
        <hr />
        <div class="container-fluid" style="font-weight:bold; font-size:small">
            <div class="row">
                <div class="col-xl-9" style="padding: 10px 1px 1px 50px;">TecnoSozluk.com</div>
                <div class="col-xl-3" style="padding: 10px 50px 10px 50px;">@Html.Label(odev.Kaynaklar.lang.baglantilar)</div>
                <div class="col-xl-9" style="padding: 8px 1px 30px 60px;">@Html.Label(odev.Kaynaklar.lang.aciklama)</div>
                <div class="col-xl-3" style="padding: 8px 1px 30px 60px;">İnstagram : _uhudates7<br>Linked : Uhudhan Ateş</div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
